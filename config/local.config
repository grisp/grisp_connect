[
    {grisp_keychain, [
        {tls_server_trusted_certs, {priv, grisp_connect, "server"}},
        {client_certs, {priv, grisp_connect, "client/generic_device.pem"}},
        {client_key, {priv, grisp_connect, "client/generic_device.key"}}
    ]},

    {grisp_updater, [
        {system, {grisp_updater_dummy, #{}}},
        {sources, [
            {grisp_updater_tarball, #{}},
            {grisp_updater_http, #{
                backend => {grisp_updater_grisp2, #{}}
            }}
        ]}
    ]},

    {grisp_connect, [
        {domain, "www.seawater.local"},
        {port, 8443},
        {board_certificate, "priv/board.pem"},
        {allowed_ca_chain, "priv/peers.CA.pem"}
    ]},

    {kernel, [
        {logger_level, debug},
        {logger, [
            {handler, default, logger_std_h, #{
                config => #{type => standard_io},
                filter_default => log,
                filters => [
                    % Filter out supervisor progress reports so
                    % TLS certificates are not swamping the console...
                    {disable_progress, {fun logger_filters:progress/2, stop}}
                ]
            }}
        ]}
    ]}
].
